extends ../layout

block content
	.container
		.row
			form.form-horizontal(method = "post", action = "/admin/shop/new")
				.form-group
					label.col-sm-2.control-label(for = "inputTitle") GoodsName
					.col-sm-10
						input#inputTitle.col-sm-10.form-control(type = "text", name = "shop[title]", value = shop.title)
				.form-group
					label.col-sm-2.control-label(for="inputOrign") Orign
					.col-sm-10
						input#inputOrign.col-sm-10.form-control(type="text",name="shop[orign]" value = shop.orign)
				.form-group
					label.col-sm-2.control-label(for="inputYear") Year
					.col-sm-10
						input#inputOrign.col-sm-10.form-control(type="text",name="shop[year]" value = shop.year)
				.form-group
					label.col-sm-2.control-label(for="inputFlash") FlashURL
					.col-sm-10
						input#inputFlash.col-sm-10.form-control(type = "text",name = "shop[flash]" value = shop.flash)
				.form-group
					label.col-sm-2.control-label(for="inputPoster") PosterPath
					.col-sm-10
						input#inputPoster.col-sm-10.form-control(type="text",name="shop[poster]" value=shop.poster)
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") PosterUpload
					.col-sm-10
						input#uploadPoster(type="file",name="uploadPoster")
				.form-group
					label.col-sm-2.control-label(for="inputSummary") Summary
					.col-sm-10
						input#inputSummary.col-sm-10.form-control(type="textarea" name="shop[summary]" value=shop.summary)
				.form-actions
					button(type='submit',style='float:right' class='btn btn-primary') Submit